.top{
    width: 100%;
    height: 680rpx;
}

.tabbar{
    position:fixed;
    bottom:0;
}

.sku-pending{
    box-sizing: border-box;
    width: 100%;
    height: 80rpx;
    background-color: #ffffff;
    margin: 10rpx 0;
    display:flex;
    flex-direction:row;
    justify-content: space-between;
    align-items: center;
    font-size: 28rpx;
    color: #333333;
    padding:0 30rpx;
}

.specs > text:first-child{
    color: #999999;
    font-size:24rpx;
}

.specs > text:nth-child(2){
    font-size: 24rpx;
    color: #157658;
}



